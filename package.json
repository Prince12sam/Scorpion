    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.0",
    "eslint": "^8.57.1",
    "eslint-config-react-app": "^7.0.1",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.5"
  },
  "keywords": [
    "security",
    "cybersecurity",
    "vulnerability-scanner",
    "threat-hunting",
    "penetration-testing",
