    "express": "^4.21.2",
    "express-brute": "^1.0.1",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "express-slow-down": "^3.0.0",
    "express-validator": "^7.2.1",
    "framer-motion": "^10.16.4",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.292.0",
    "node-2fa": "^2.0.3",
    "ora": "^7.0.0",
    "prisma": "^6.16.2",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "redis": "^5.8.2",
    "speakeasy": "^2.0.0",
    "tailwind-merge": "^1.1.4",
    "tailwindcss-animate": "^1.0.7",
