{
  "name": "scorpion-cli",
  "type": "module",
  "version": "2.0.1",
  "private": true,
  "description": "Scorpion - CLI Security Testing and Threat-Hunting Platform",
  "bin": {
    "scorpion": "./cli/scorpion.js"
  },
  "scripts": {
    "cli": "node cli/scorpion.js",
    "start": "node cli/scorpion.js",
    "scan": "node cli/scorpion.js scan",
    "scan:local": "node tools/run-scan.js",
    "exploit": "node cli/scorpion.js exploit",
    "recon": "node cli/scorpion.js recon",
    "help": "node cli/scorpion.js --help",
    "help:advanced": "node cli/scorpion.js help-advanced",
    "intel:local": "node tools/run-intel.js",
    "recon:local": "node tools/run-recon.js",
    "suite:local": "node tools/run-suite.js",
    "password:crack": "node tools/run-password.js crack",
    "password:breach": "node tools/run-password.js breach",
    "password:strength": "node tools/run-password.js strength",
    "test": "node cli/scorpion.js scan -t localhost --ports 80,443"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.2",
    "node-forge": "^1.3.2",
    "ora": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.3"
  },
  "keywords": [
    "security",
    "cybersecurity",
    "vulnerability-scanner",
    "threat-hunting",
    "penetration-testing",
    "network-security",
    "cli-tool",
    "security-audit"
  ],
  "author": "Scorpion Security Team",
  "license": "MIT"
}
