{
  "name": "scorpion-security-platform",
  "type": "module",
  "version": "1.0.1",
  "private": true,
  "description": "Scorpion - Global Threat-Hunting Platform with CLI and Web Interface",
  "bin": {
    "scorpion": "./cli/scorpion.js"
  },
  "scripts": {
    "dev": "vite",
    "dev:full": "concurrently \"npm run server\" \"npm run dev\"",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "server": "node server/simple-web-server.js",
    "cli": "node cli/scorpion.js",
    "setup": "node cross-platform-installer.js",
    "postinstall": "npm run build",
    "start": "node server/simple-web-server.js",
    "test:web": "node test-web-interface.js",
    "test:platform": "node cross-platform-test.js",
    "test:cross-platform": "node cross-platform-test.js",
    "quick-start": "npm install && npm start",
    "start:simple": "node server/simple-web-server.js",
    "start:enterprise": "node server/enterprise-hardened-server.js",
    "test": "npm run test:cross-platform",
    "scan": "node cli/scorpion.js scan",
    "scan:local": "node tools/run-scan.js",
    "exploit": "node cli/scorpion.js exploit",
    "help:advanced": "node cli/scorpion.js help-advanced",
    "intel:local": "node tools/run-intel.js",
    "recon:local": "node tools/run-recon.js",
    "suite:local": "node tools/run-suite.js",
    "password:crack": "node tools/run-password.js crack",
    "password:breach": "node tools/run-password.js breach",
    "password:strength": "node tools/run-password.js strength",
    "install:windows": "node cross-platform-installer.js && echo 'Scorpion installed successfully on Windows!'",
    "install:macos": "node cross-platform-installer.js && echo 'Scorpion installed successfully on macOS!'",
    "install:linux": "node cross-platform-installer.js && echo 'Scorpion installed successfully on Linux!'",
    "install:cross-platform": "node cross-platform-installer.js",
    "start:windows": "start-windows.bat",
    "start:linux": "./start-unix.sh",
    "start:unix": "./start-unix.sh"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.3",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.5",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "axios": "^1.7.7",
    "bcryptjs": "^3.0.2",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "commander": "^11.1.0",
    "compression": "^1.8.1",
    "connect-redis": "^9.0.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "csurf": "^1.11.0",
    "dotenv": "^17.2.2",
    "express": "^4.21.1",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "express-slow-down": "^3.0.0",
    "express-validator": "^7.2.1",
    "framer-motion": "^10.18.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.292.0",
    "node-2fa": "^2.0.3",
    "ora": "^7.0.0",
    "prisma": "^6.16.2",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "redis": "^5.8.2",
    "speakeasy": "^2.0.0",
    "tailwind-merge": "^1.1.4",
    "tailwindcss-animate": "^1.0.7",
    "winston": "^3.17.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.3",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.0",
    "eslint": "^8.57.1",
    "eslint-config-react-app": "^7.0.1",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.3",
    "vite": "^7.1.9"
  },
  "keywords": [
    "security",
    "cybersecurity",
    "vulnerability-scanner",
    "threat-hunting",
    "penetration-testing",
